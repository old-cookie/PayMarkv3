<?xml version="1.0" encoding="utf-8"?>
<!-- This is a shape drawable that defines a rectangle with rounded corners, a solid white fill, and a green stroke. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Defines the radius for the corners of the rectangle. -->
    <corners android:radius="20dp"/>
    <!-- Defines the fill color for the rectangle. -->
    <solid android:color="@color/white"/>
    <!-- Defines the stroke color and width for the rectangle. -->
    <stroke android:color="@color/green_006400" android:width="3dp"/>
</shape>