<?xml version="1.0" encoding="utf-8"?>
<!-- This is the root layout for the Income Chart Fragment. It is a FrameLayout. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f3f3f3">

    <!-- This ListView is used to display the income chart. It occupies the entire space of the FrameLayout.
         The divider is set to a color defined in the color resources and its height is 1dp. -->
    <ListView
        android:id="@+id/frag_chart_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/grey_f3f3f3"
        android:dividerHeight="1dp" />
</FrameLayout>