<?xml version="1.0" encoding="utf-8"?>
<!-- This is the root layout for the Calendar Dialog. It is a vertical LinearLayout. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- This HorizontalScrollView contains a LinearLayout for displaying a horizontal list of items. -->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- This LinearLayout is used to display a horizontal list of items. -->
        <LinearLayout
            android:id="@+id/dialog_calendar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <!-- This GridView is used to display a grid of items. -->
    <GridView
        android:id="@+id/dialog_calendar_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4" />

    <!-- This ImageView acts as a close button for the dialog. -->
    <ImageView
        android:id="@+id/dialog_calendar_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@mipmap/ih_error" />
</LinearLayout>